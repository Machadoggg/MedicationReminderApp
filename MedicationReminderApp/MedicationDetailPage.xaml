<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicationReminderApp.MedicationDetailPage"
             Title="MedicationDetailPage">
    <StackLayout>
        <Label Text="{Binding Name}" />
        <Label Text="{Binding Dosage}" />
        <Label Text="{Binding Time, StringFormat='{0:hh\\:mm}'}" />
        <Button Text="Marcar como Tomado" Clicked="OnMarkAsTakenClicked" />
        <Button Text="Eliminar" Clicked="OnDeleteClicked" />
    </StackLayout>
</ContentPage>