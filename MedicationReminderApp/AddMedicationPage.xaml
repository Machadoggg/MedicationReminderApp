<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicationReminderApp.AddMedicationPage"
             Title="AddMedicationPage">
    <StackLayout>
        <Entry x:Name="NameEntry" Placeholder="Nombre del Medicamento" />
        <Entry x:Name="DosageEntry" Placeholder="Dosis" />
        <TimePicker x:Name="TimePicker" />
        <Button Text="Guardar" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>